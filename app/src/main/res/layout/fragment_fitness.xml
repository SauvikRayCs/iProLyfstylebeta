<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light">

    <TextView
        android:id="@+id/nav_fitness"
        android:layout_width="264dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="64dp"
        android:gravity="center"
        android:text="@string/Fragment_fitness"
        android:textSize="26sp"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageButton
            android:id="@+id/gokuId"
            android:layout_width="wrap_content"
            android:layout_height="266dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/goku" />
        <ImageButton
            android:id="@+id/batmanId"
            android:layout_width="wrap_content"
            android:layout_height="266dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/batman" />
        <ImageButton
            android:id="@+id/supermanId"
            android:layout_width="wrap_content"
            android:layout_height="266dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/superman" />
        <ImageButton
            android:id="@+id/spidermanId"
            android:layout_width="wrap_content"
            android:layout_height="266dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/spiderman" />
    </LinearLayout>
</ScrollView>

</RelativeLayout>