<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="264dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="64dp"
        android:gravity="center"
        android:text="@string/Fragment_quotes"
        android:textSize="26sp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">
            <ImageButton
                android:id="@+id/qOne"
                android:layout_width="wrap_content"
                android:layout_height="295dp"
                android:src="@drawable/gandhi"
                android:contentDescription="Weight Loss"/>

            <ImageButton
                android:id="@+id/qTwo"
                android:layout_width="378dp"
                android:layout_height="266dp"
                android:layout_marginTop="10dp"
                android:contentDescription="Keto"
                android:src="@drawable/einstein" />
            <ImageButton
                android:id="@+id/qFour"
                android:layout_width="wrap_content"
                android:layout_height="266dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/jackson"
                android:contentDescription="Vegan"/>
            <ImageButton
                android:id="@+id/qFive"
                android:layout_width="wrap_content"
                android:layout_height="266dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/hawking"
                android:contentDescription="Paleo"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>